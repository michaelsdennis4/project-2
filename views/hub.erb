<div class="header">
	<h2>Jake's FORUM</h2>
</div>
<div class="links">
	<a href="/users/<%= current_user %>">My Profile</a> | 
	<a href="/topics/new">Create New Topic</a>
</div>

<div class="topics_list">
	<h2 id="box_caption">Topics</h2>
		<% @topics.each do |topic| %>
			<div class="topic">
				<h4 class="topic_text"><a href="/topics/<%= topic.id %>"><%= topic.subject %></a></h4>
				<h5 class="topic_text">Created by: <%= topic.owner_name %> | Created on: <%= topic.created_on %>  | Location: <%= topic.user_location %> </h5> 
				<h5 class="topic_text">Comments: 10   |  Votes: 10   </h5>
			</div>
		<% end %>
</div>

<div class="users_list">
	<h2 id="box_caption">Users</h2>
		<% @users.each do |user| %>
			<div class="user">
				<img id="user_image" src="<%= user.image %>"/>
				<h5 id="user_text"><a href="/users/<%= user.id %>"><%= user.fname %> <%= user.lname %></a></h5>
			</div>
		<% end %>
</div>



